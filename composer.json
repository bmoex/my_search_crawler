{
    "name": "serfhos/my-search-crawler",
    "description": "TYPO3 Extension: Elastic Indexing web crawler based on TYPO3 9.5 routing",
    "type": "typo3-cms-extension",

    "keywords": [
        "TYPO3",
        "CMS",
        "Serfhos",
        "Benjamin Serfhos",
        "Extbase",
        "Elastic",
        "Index",
        "Search"
    ],
    "homepage": "https://github.com/bmoex/my_search_crawler",
    "license": "LGPL-3.0+",
    "require": {
        "typo3/cms-core": ">=9.5.0",
        "typo3/cms-frontend": ">9.5.0",
        "typo3/cms-scheduler": ">=9.5.0",
        "elasticsearch/elasticsearch": "^6.0",
        "symfony/dom-crawler": "^4.3",
        "symfony/css-selector": "^4.3"
    },

    "replace": {
        "typo3-ter/my-search-crawler": "self.version"
    },

    "autoload": {
        "psr-4": {
            "Serfhos\\MySearchCrawler\\": "Classes/"
        }
    },

    "authors": [
        {
            "name": "Benjamin Serfhos",
            "email": "benjamin@serfhos.com",
            "homepage": "http://serfhos.com"
        }
    ]
}
